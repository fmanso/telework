<body>
    <Routes />
    <ReconnectModal />
    <script>
        window.applyTheme = function(themeClass) {
            console.log('applyTheme called with:', themeClass);
            if (themeClass === 'dark-theme') {
                document.body.classList.add('dark-theme');
                console.log('Added dark-theme class');
            } else {
                document.body.classList.remove('dark-theme');
                console.log('Removed dark-theme class');
            }
            console.log('Body classes now:', document.body.className);
        };

        window.loadTheme = function() {
            var savedTheme = localStorage.getItem('theme');
            console.log('Loading theme, saved:', savedTheme);
            if (savedTheme === 'dark') {
                document.body.classList.add('dark-theme');
            }
        };

        // Apply saved theme on load
        window.loadTheme();
    </script>
    <script src="@Assets["_framework/blazor.web.js"]"></script>
</body>

</html>
